# Valhalla Docker Configuration
# Copy this file to .env and customize as needed
#
# NOTE: Tiles are located at D:\valhalla_data
# The docker-compose.yml is configured to mount this location automatically

# Port Configuration
VALHALLA_PORT=8002

# Performance Settings
SERVER_THREADS=4
CPU_LIMIT=4.0
CPU_RESERVATION=2.0
MEMORY_LIMIT=8G
MEMORY_RESERVATION=4G

# Build Options
# Set to False if you already have tiles and don't want to rebuild
FORCE_REBUILD=False
USE_TILES_IGNORE_PBF=True
BUILD_TAR=True
SERVE_TILES=True

# Database Building Options
BUILD_ADMINS=True
BUILD_TIME_ZONES=True
BUILD_ELEVATION=False
BUILD_TRANSIT=False

# Configuration Options
UPDATE_EXISTING_CONFIG=True
USE_DEFAULT_SPEEDS_CONFIG=True

# Optional: Custom Paths
PATH_EXTENSION=
TILESET_NAME=valhalla_tiles
TRAFFIC_NAME=

# Logging
LOG_LEVEL=INFO

# OSM Data URLs (only needed if downloading data)
# TILE_URLS=https://download.geofabrik.de/europe/germany-latest.osm.pbf
